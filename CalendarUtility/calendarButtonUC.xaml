<UserControl x:Class="CalendarUtility.calendarButtonUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalendarUtility"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Height="300" Width="300" Background="Black" BorderThickness="1" BorderBrush="White"/>
        <Button x:Name="button" Content="Date" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="25" Height="25" Background="{x:Null}" Foreground="White"/>

    </Grid>
</UserControl>
